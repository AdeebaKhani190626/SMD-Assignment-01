<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityScreen8"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- Add Playlist   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:translationY="35dp"
            android:translationX="10dp"
            android:src="@drawable/screens_7_arrow_02">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Playlist"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:translationY="40dp"
            android:translationX="75dp">
        </TextView>
    </RelativeLayout>

    <!-- Main Body   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:translationY="150dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/message_bar"
            android:translationX="105dp">
        </ImageView>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/screens_9_cloud_03"
            android:translationX="170dp"
            android:translationY="70dp">
        </ImageView>

        <!-- First Entry -->
        <View
            android:id="@+id/myRectangleView"
            android:layout_width="355dp"
            android:layout_height="55dp"
            android:background="@drawable/rectangle_rounded"
            android:translationX="28dp"
            android:translationY="255dp"></View>
        <EditText
            android:id="@+id/input_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:inputType="text"
            android:translationX="34dp"
            android:translationY="255dp"
            android:text="Playlist Name"
            android:layout_margin="6dp"
            android:textColor="#d4b300"
            android:backgroundTint="#f6f6f6"/>

        <!-- Second Entry -->
        <View
            android:id="@+id/myRectangleView2"
            android:layout_width="355dp"
            android:layout_height="100dp"
            android:translationX="28dp"
            android:translationY="330dp"
            android:background="@drawable/rectangle_rounded">
        </View>
        <EditText
            android:id="@+id/input_desc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:inputType="text"
            android:translationX="34dp"
            android:translationY="350dp"
            android:text="Description"
            android:layout_margin="6dp"
            android:textColor="#d4b300"
            android:backgroundTint="#f6f6f6"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addPl"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/button_rounded"
            android:text="Add Playlist"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:translationX="230dp"
            android:translationY="490dp"></androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

    <!-- Bottom Bar   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:translationY="750dp"
        android:background="#2a2730">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:src="@drawable/screens_5_21"
            android:translationY="3dp"
            android:translationX="20dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="35dp">
        </TextView>

        <View
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@color/black"
            android:translationX="110dp">
        </View>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:translationY="8dp"
            android:translationX="125dp"
            android:src="@drawable/screens_5_23">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="142dp">
        </TextView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:translationY="18dp"
            android:translationX="230dp"
            android:src="@drawable/screens_5_25">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="230dp">
        </TextView>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:translationY="10dp"
            android:translationX="328dp"
            android:src="@drawable/screens_5_27">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen Later"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="320dp">
        </TextView>
    </RelativeLayout>

</RelativeLayout>