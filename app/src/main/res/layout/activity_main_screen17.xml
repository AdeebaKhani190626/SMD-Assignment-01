<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityScreen17"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- Top Bar   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <View
            android:id="@+id/myRectangleView"
            android:layout_width="325dp"
            android:layout_height="55dp"
            android:background="@drawable/rectangle_rounded"
            android:translationX="65dp"
            android:translationY="60dp"></View>
        <EditText
            android:id="@+id/search"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:inputType="text"
            android:translationX="70dp"
            android:translationY="60dp"
            android:text="Search"
            android:layout_margin="6dp"
            android:textColor="#d4b300"
            android:backgroundTint="#f6f6f6"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/screens_7_arrow_02"
            android:translationX="8dp"
            android:translationY="60dp">
        </ImageView>
    </RelativeLayout>

    <!-- Main   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:translationY="151dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Searches"
            android:textColor="#d4b300"
            android:textSize="25dp"
            android:translationX="60dp">
        </TextView>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:translationX="30dp"
            android:translationY="50dp"
            android:src="@drawable/screens_8_despacito_03">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:translationX="135dp"
            android:translationY="70dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textColor="#d4b300"
            android:textSize="20dp"
            android:translationX="135dp"
            android:translationY="95dp">
        </TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:translationX="350dp"
            android:translationY="80dp"
            android:src="@drawable/screens_18_03">
        </ImageView>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:translationX="25dp"
            android:translationY="140dp"
            android:src="@drawable/screens_5_09">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:translationX="135dp"
            android:translationY="160dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textColor="#d4b300"
            android:textSize="20dp"
            android:translationX="135dp"
            android:translationY="187dp">
        </TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:translationX="350dp"
            android:translationY="180dp"
            android:src="@drawable/screens_18_03">
        </ImageView>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="100dp"
            android:translationX="25dp"
            android:translationY="240dp"
            android:src="@drawable/screens_5_09">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:translationX="135dp"
            android:translationY="260dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textColor="#d4b300"
            android:textSize="20dp"
            android:translationX="135dp"
            android:translationY="287dp">
        </TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:translationX="350dp"
            android:translationY="280dp"
            android:src="@drawable/screens_18_03">
        </ImageView>

    </RelativeLayout>

    <!-- Bottom Bar   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:translationY="750dp"
        android:background="#2a2730">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:src="@drawable/screens_5_21"
            android:translationY="3dp"
            android:translationX="20dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="35dp">
        </TextView>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:translationY="8dp"
            android:translationX="125dp"
            android:src="@drawable/screens_5_23">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="142dp">
        </TextView>

        <View
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@color/black"
            android:translationX="205dp">
        </View>
        <ImageView
            android:id="@+id/screen16_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/screens_5_25"
            android:translationX="230dp"
            android:translationY="18dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="230dp">
        </TextView>

        <ImageView
            android:id="@+id/screen17_listenLater"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:src="@drawable/screens_5_27"
            android:translationX="328dp"
            android:translationY="10dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen Later"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="320dp">
        </TextView>
    </RelativeLayout>

</RelativeLayout>