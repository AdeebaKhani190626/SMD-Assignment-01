<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityScreen13"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- Record   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:translationY="35dp"
            android:translationX="10dp"
            android:src="@drawable/screens_7_arrow_02">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record"
            android:textColor="#ffffff"
            android:textSize="32dp"
            android:translationY="40dp"
            android:translationX="75dp">
        </TextView>

        <Button
            android:id="@+id/screen13Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#d4b300"
            android:textSize="18dp"
            android:translationX="300dp"
            android:translationY="40dp"></Button>
    </RelativeLayout>

    <!-- Main Body   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:translationY="100dp">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/screens_8_despacito_03"
            android:translationX="70dp">
        </ImageView>
        <ImageView
            android:id="@+id/stop_record"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/screens_14_03"
            android:translationX="135dp"
            android:translationY="350dp">
        </ImageView>

        <ImageView
            android:id="@+id/bar"
            android:layout_width="325dp"
            android:layout_height="70dp"
            android:src="@drawable/screens_14_05"
            android:translationX="40dp"
            android:translationY="260dp"></ImageView>

        <ImageView
            android:id="@+id/play"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/screens_14_04"
            android:translationX="210dp"
            android:translationY="350dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:00 / 2:45"
            android:textSize="23sp"
            android:textColor="#d4b300"
            android:translationY="320dp"
            android:translationX="150dp">
        </TextView>
    </RelativeLayout>

    <!-- Bottom Bar   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:translationY="750dp"
        android:background="#2a2730">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:src="@drawable/screens_5_21"
            android:translationY="3dp"
            android:translationX="20dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="35dp">
        </TextView>

        <View
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@color/black"
            android:translationX="110dp">
        </View>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:translationY="8dp"
            android:translationX="125dp"
            android:src="@drawable/screens_5_23">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="142dp">
        </TextView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:translationY="18dp"
            android:translationX="230dp"
            android:src="@drawable/screens_5_25">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="230dp">
        </TextView>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:translationY="10dp"
            android:translationX="328dp"
            android:src="@drawable/screens_5_27">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen Later"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="320dp">
        </TextView>
    </RelativeLayout>

</RelativeLayout>