<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityScreen14"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- Top Bar   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="Select Playlist"
            android:translationY="55dp"
            android:translationX="95dp"
            android:textColor="#ffffff">
        </TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Skip"
            android:translationY="55dp"
            android:translationX="0dp"
            android:textAllCaps="false"
            android:textColor="#d4b300"
            android:textSize="18dp">
        </Button>

        <Button
            android:id="@+id/screen14_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#d4b300"
            android:textSize="18dp"
            android:translationX="325dp"
            android:translationY="55dp"></Button>
    </RelativeLayout>

    <!-- Body   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:translationY="151dp">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:src="@drawable/playlist_rounded"
            android:translationX="20dp"
            android:translationY="150dp"></ImageView>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/yellow_circle"
            android:translationX="320dp"
            android:translationY="500dp">
        </ImageView>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/screens_15_add_03"
            android:translationX="320dp"
            android:translationY="505dp">
        </ImageView>
    </RelativeLayout>

    <!-- Bottom Bar   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:translationY="750dp"
        android:background="#2a2730">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:src="@drawable/screens_5_21"
            android:translationY="3dp"
            android:translationX="20dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liked"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="35dp">
        </TextView>

        <View
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@color/black"
            android:translationX="110dp">
        </View>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:translationY="8dp"
            android:translationX="125dp"
            android:src="@drawable/screens_5_23">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="142dp">
        </TextView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:translationY="18dp"
            android:translationX="230dp"
            android:src="@drawable/screens_5_25">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="230dp">
        </TextView>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:translationY="10dp"
            android:translationX="328dp"
            android:src="@drawable/screens_5_27">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen Later"
            android:textColor="#e8def8"
            android:translationY="50dp"
            android:translationX="320dp">
        </TextView>
    </RelativeLayout>

</RelativeLayout>